@model List<MovieApp.Models.Details.Genre>

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        
        <a asp-controller="Movies" asp-action="Index" class="list-group-item list-group-item-action">
            <i class="bi bi-film me-2"></i>Tüm Filmler
        </a>
         <hr class="my-1"/>
       

        @foreach (var genre in Model)
        {
            <a asp-controller="Genres" asp-action="MoviesByGenre" asp-route-id="@genre.Id" asp-route-name="@genre.Name"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                @genre.Name
                <i class="bi bi-chevron-right small text-muted"></i> 
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-light small" role="alert">
        Tür listesi yüklenemedi veya bulunamadı.
    </div>
}